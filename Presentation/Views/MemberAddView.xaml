<UserControl x:Class="Presentation.Views.MemberAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation.Views"
             xmlns:viewmodels="clr-namespace:Presentation.ViewModels"
             xmlns:models="clr-namespace:Infrastructure.Models;assembly=Infrastructure"
             d:DataContext="{d:DesignInstance Type=viewmodels:MemberAddViewModel}"

             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Margin="5 5 0 15" VerticalAlignment="Center" Text="{Binding Title, FallbackValue=Ny Produkt}" FontWeight="Bold" FontSize="18"  />

        <StackPanel Grid.Row="2">
            <StackPanel Margin="0 0 0 10">
                <Label Content="Personnummer" />
                <TextBox Text="{Binding Member.SocialSecurityNumber}" Margin="5 0 5 0" />
                <TextBlock Text="{Binding ErrorMessage}" Margin="5 0 5 0" Foreground="Red" />
                <TextBlock Text="{Binding SuccessMessage}" Margin="5 0 5 0" Foreground="Green" />
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 6 0">
                <Button Command="{Binding CancelCommand}" Content="Tillbaka" Width="65" Height="25" Margin="0,0,10,0" Padding="5 5" Background="LightBlue" FontSize="10" FontWeight="Bold"/>
                <Button Command="{Binding SaveCommand}" Content="Regristrera" Width="65" Height="25" Padding="5 5" Background="LightBlue" FontSize="10" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
