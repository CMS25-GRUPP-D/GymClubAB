<Window x:Class="Presentation.Views.MemberView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medlemsinfo" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Aktuell medlemsnivå:" FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrentMembershipLevel}" FontSize="16" Margin="0,5,0,15"/>

            <TextBlock Text="Välj ny medlemsnivå:" FontWeight="Bold"/>
            <ComboBox ItemsSource="{Binding MembershipLevels}" 
                      SelectedItem="{Binding SelectedMembershipLevel}" 
                      Margin="0,5,0,15"/>

            <Button Content="Uppdatera medlemsnivå" Width="180" 
                    Click="UpdateMembership_Click" Margin="0,5,0,0"/>

            <TextBlock Text="{Binding StatusMessage}" 
                       Foreground="DarkRed" 
                       FontWeight="Bold" 
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
